<nav class="cbp-spmenu cbp-spmenu-vertical cbp-spmenu-left" id="cbp-spmenu-s1">
    <img src="{{ asset('img/logo.png') }}" />

    {% if app.user %}
        <a href="{{ path('video_stream_homepage') }}">Accueil</a>
        <a href="{{ path('recommendation_page') }}">Vidéos à regarder</a>
        <a href="{{ path('upload_video') }}">Mettre en ligne</a>
        <a href="{{ path('profile_page') }}">Mon profil</a>
        <a href="{{ path('myVideo_page') }}">Mes vidéos</a>
        <a href="{{ path('contact_page') }}">Contact</a>
    {% else %}
        <a href="{{ path('video_stream_homepage') }}">Accueil</a>
        <a href="{{ path('contact_page') }}">Contact</a>
    {% endif %}

</nav>

<div class="container">
    <header class="clearfix">

        <div id="header-block">
            <button id="showLeftPush">
                <i class="fa fa-reorder floatRight cursorPointer"></i>
            </button>

            <form>
                <input type="text" placeholder="Search on Youtube" name="" id="search-header"/>
            </form>

            {#<a href="{{ path('registration_user') }}">#}
            {#<span id="toggle-register">Register</span>#}
            {#</a>#}

            {% if app.user %}
                <a href="../logout">
                    <h6>Se déconnecter</h6>
                </a>
                <h5>Bienvenue, </h5>
            {% else %}
                <div class="dialog dialog--welcome">
                    <button id="login-pop" class="dialog__action">Connexion</button>
                </div>

                <div class="dialog dialog--register">
                    <button id="inscription-pop" class="dialog__register">Inscription</button>
                </div>
            {% endif %}
        </div>
    </header>

    <div id="block-content">
        <section id="section-view">
            <video width="640" height="360" controls autoplay="autoplay">
                <source src="{{ asset('uploads/videos') }}/{{ video_id.getVideoLink}}" type="video/mp4">
                Your browser does not support the video tag.
            </video>
            <p>{{ video_id.getVideoName}} </p>
            <span>{{ video_id.getVideoDescription }}</span>
            <span class="number-view"><span>{{ video_id.videoViewCount}}</span> views   |</span>
            <h7>Auteur : </h7>
            <a href="../shareIt/{{ video_id.getId }}">Générez un lien privé</a>
        </section>

        <aside id="aside-view">
            {% for video in recommendedVideos %}
                <div class="block-recommendation">
                    <div class="block-recommendation-pic">
                        <a href="../app_dev.php/view/{{ video.getId }}">
                            {#<img id="pic-1" src="" width="525px"/>#}
                        </a>
                    </div>
                <p>{{ video.getVideoName() }}</p>
                </div>
                <hr>
            {% endfor %}
        </aside>
    </div>
</div>



<script>
    var menuLeft = document.getElementById( 'cbp-spmenu-s1' ),
            menuRight = document.getElementById( 'cbp-spmenu-s2' ),
            menuTop = document.getElementById( 'cbp-spmenu-s3' ),
            menuBottom = document.getElementById( 'cbp-spmenu-s4' ),
            showLeft = document.getElementById( 'showLeft' ),
            showRight = document.getElementById( 'showRight' ),
            showTop = document.getElementById( 'showTop' ),
            showBottom = document.getElementById( 'showBottom' ),
            showLeftPush = document.getElementById( 'showLeftPush' ),
            showRightPush = document.getElementById( 'showRightPush' ),
            body = document.body;

    showLeftPush.onclick = function() {
        classie.toggle( this, 'active' );
        classie.toggle( body, 'cbp-spmenu-push-toright' );
        classie.toggle( menuLeft, 'cbp-spmenu-open' );
        disableOther( 'showLeftPush' );
    };


</script>
</body>
</html>
