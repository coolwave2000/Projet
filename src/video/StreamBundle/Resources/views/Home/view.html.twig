<body class="cbp-spmenu-push">
<div class="modals">
    <div class="modals__content">
        <div class="dialog dialog--register">
            <h1 class="dialog__header">Inscription</h1>
            <form class="dialog__body register">
                <div class="login__field">
                    <div class="login__field__icon login__field__icon--username">
                        <svg viewBox="0 0 512 512"><use xlink:href="#user-icon"></svg>
                    </div>
                    <input class="login__field__input" type="text" placeholder="E-mail" />
                </div>
                <div class="login__field">
                    <div class="login__field__icon login__field__icon--password">
                        <svg viewBox="0 0 512 512"><use xlink:href="#key-icon"></svg>
                    </div>
                    <input class="login__field__input" type="password" placeholder="Mot de passe" />
                </div>
                <button type="submit" class="dialog__register">S'inscrire</button>
            </form>
        </div>
    </div>
</div>


<div class="modal">
    <div class="modal__content">
        <div class="dialog dialog--login">
            <h1 class="dialog__header">Connexion</h1>

            <form class="dialog__body login">
                <div class="login__field">
                    <div class="login__field__icon login__field__icon--username">
                        <svg viewBox="0 0 512 512"><use xlink:href="#user-icon"></svg>
                    </div>
                    <input class="login__field__input" type="text" placeholder="E-mail" />
                </div>
                <div class="login__field">
                    <div class="login__field__icon login__field__icon--password">
                        <svg viewBox="0 0 512 512"><use xlink:href="#key-icon"></svg>
                    </div>
                    <input class="login__field__input" type="password" placeholder="Mot de passe" />
                </div>
                <button type="submit" class="dialog__action">Se connecter</button>
            </form>
        </div>
    </div>
</div>

